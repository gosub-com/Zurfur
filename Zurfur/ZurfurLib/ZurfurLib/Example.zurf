pub static func MemCopy(dest *void, source *void, length xint)
{
    var d = cast xint(dest)
    var s = cast xint(source)
    
    if length <= 0
    {
        return
    }
    // Align `d` on i32
    while d & 3 != 0 && length != 0
    {
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1; length-=1
    }
    
    if s & 3 == 0
    {
        MemCopy32(cast *void(d), cast *void(s), length)
        return
    }
    
    // Byte copy
    var end = d + length
    while end-d >= 4
    {
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1
    } 
    while d != end
    {
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1
    }
}

pub static func MemCopy32(dest *void, source *void, length xint)
{
    var d = cast xint(dest)
    var s = cast xint(source)

    if length <= 0
    {
        return
    }

    // Try 64 bit copy first
    var end = d + length
    if (d~s) & 4 == 0 && length >= 8
    {
        if d & 4 != 0
        {
            *cast *i32(d) = *cast *i32(s); d+=4; s+=4
        }
        while end - d >= 8  
        {
            *cast *i64(d) = *cast *i64(s); d+=8; s+=8
        }
    }
    while end-d >= 4
    {
        *cast *i32(d) = *cast *i32(s); d+=4; s+=4
    }
    while d != end
    {
        *cast *byte(d) = *cast *byte(s); d+=1; s+=1
    }
}

