pub static func MemCopy(dest ^void, source ^void, length xint)
{
	@d = (^byte)dest
	@s = (^byte)source
	
    if length <= 0
    {
        return
    }
    // Align `d` on int32
    while (xint)d & 3 != 0 && length != 0
    {
        ^d = ^s; d+=1; s+=1; length-=1
    }
    
    if (xint)s & 3 == 0
    {
        MemCopyAlign32(d, s, length)
        return
    }
    
    // Byte copy
    @end = d + length
    while (xint)end-(xint)d >= 4
    {
        ^d = ^s; d+=1; s+=1
        ^d = ^s; d+=1; s+=1
        ^d = ^s; d+=1; s+=1
        ^d = ^s; d+=1; s+=1
    } 
    while (xint)d != (xint)end
    {
        ^d = ^s; d+=1; s+=1
    }
}

pub static func MemCopyAlign32(dest ^void, source ^void, length xint)
{
	@d = (^byte)dest
	@s = (^byte)source

    if length <= 0
    {
        return
    }
    if ((xint)s | (xint)d) & 3 != 0
    {
    	throw MemoryAccessEception()
    }

    // Try 64 bit copy first
    @end = d + length
    if ((xint)d~(xint)s) & 4 == 0 && length >= 8
    {
        if (xint)d & 4 != 0
        {
            ^(^int32)d = ^(^int32)s; d+=4; s+=4
        }
        while end - d >= 8
        {
            ^(^int64)d = ^(^int64)s; d+=8; s+=8
        }
    }
    while (xint)end-(xint)d >= 4
    {
        ^(^int32)d = ^(^int32)s; d+=4; s+=4
    }
    while (xint)d != end
    {
        ^d = ^s; d+=1; s+=1
    }
}

 