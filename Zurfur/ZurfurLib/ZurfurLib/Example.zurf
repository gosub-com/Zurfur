pub static func Sort<T>(s MutSpan<T>, lessThan func(a T, b T) bool)
{
    // Simple selection sort
    for i in s.Count-1
    {
        var lowElem = s[i]
        var lowIndex = i
        for j in i+1..s.Count
        {
            if lessThan(s[j], lowElem)
            {
                lowElem = s[j]
                lowIndex = j
            }
        }
        if lowIndex != i
        {
            s[lowIndex] = s[i]
            s[i] = lowElem
        }
    }
}

